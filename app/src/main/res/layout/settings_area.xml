<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="#282A2E">

    <Button
        android:id="@+id/deactivation"
        android:layout_width="211dp"
        android:layout_height="49dp"
        android:background="#373B41"
        android:text="Deactivate Account"
        android:fontFamily="monospace"
        android:textColor="#06F000"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp" />

    <Button
        android:id="@+id/passwordChange"
        android:layout_width="211dp"
        android:layout_height="49dp"
        android:background="#373B41"
        android:text="Change Password"
        android:fontFamily="monospace"
        android:textColor="#06F000"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/deactivation" />

    <Button
        android:id="@+id/addEmail"
        android:layout_width="211dp"
        android:layout_height="49dp"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#373B41"
        android:fontFamily="monospace"
        android:text="Change Email"
        android:textColor="#06F000"
        app:layout_constraintBottom_toTopOf="@+id/passwordChange"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/walletID"
        android:layout_width="211dp"
        android:layout_height="49dp"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#373B41"
        android:text="Personal Wallet ID"
        android:fontFamily="monospace"
        android:textColor="#06F000"
        app:layout_constraintBottom_toTopOf="@+id/addEmail"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Switch
        android:id="@+id/NotificationSwitch"
        android:layout_width="211dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:textColor="#06F000"
        android:text="Notifications"
        app:layout_constraintBottom_toTopOf="@+id/walletID"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.508"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
